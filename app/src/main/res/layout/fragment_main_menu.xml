<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ch.anoop.rickmorty.view.fragment.MainMenuFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="mainMenuFragmentViewModel"
            type="ch.anoop.rickmorty.view_model.MainMenuFragmentViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="Application logo"
                android:src="@mipmap/ic_launcher" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="@{()-> mainMenuFragmentViewModel.onClickCharactersButton()}"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:text="Characters"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        app:drawableEndCompat="@mipmap/ic_launcher"
                        app:drawableStartCompat="@mipmap/ic_launcher" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="@{()-> mainMenuFragmentViewModel.onClickEpisodesButton()}"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:text="Episodes"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        app:drawableEndCompat="@mipmap/ic_launcher"
                        app:drawableStartCompat="@mipmap/ic_launcher" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="@{()-> mainMenuFragmentViewModel.onClickLocationsButton()}"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:text="Location"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        app:drawableEndCompat="@mipmap/ic_launcher"
                        app:drawableStartCompat="@mipmap/ic_launcher" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</layout>